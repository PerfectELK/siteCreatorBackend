                        <div class="textarea__container">
                            <label for="nginx__template">Шаблон конфига nginx:</label>
                            <textarea id="nginx__template" name="" cols="50" rows="20" class="textarea__option" v-model="configFields.nginxTemplate">
                                <plaintext>

                            </textarea>
                        </div>
                    </div>
                </div>

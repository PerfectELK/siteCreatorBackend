            <div class="options-submit">
                <div class="options-submit__container">
                    <div class="submit">
                        <button class="submit-option" v-on:click="setActiveSiteConfig">
                            Выбрать
                        </button>
                    </div>
                    <div class="submit">
                        <button class="submit-option" v-on:click="saveSiteConfig">
                            Сохранить
                        </button>
                    </div>
                    <div class="submit">
                        <button class="submit-option" v-on:click="deleteSiteConfig">
                            Удалить
                        </button>
